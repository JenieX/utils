{
  "files.exclude": {
    "example-require.cjs": true,
    "example-import.ts": true,
    ".husky": true
    // "node_modules": true
  },
  "[typescript]": { "editor.defaultFormatter": "dbaeumer.vscode-eslint" },
  "code-runner.executorMap": { "typescript": "tsx" },
  "explorer.fileNesting.enabled": true,
  "explorer.fileNesting.expand": false,
  "explorer.fileNesting.patterns": {
    "package.json": ".commitlintrc.json, to-do.md, .gitignore, config.json, tsconfig.json, package-lock.json, rollup.config.*, .eslintrc.json"
  }
}
